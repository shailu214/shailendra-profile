# Production Environment Variables
# Copy this to .env.production in backend folder before deployment

# Database Configuration
MONGODB_URI=mongodb+srv://portfoliouser:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/portfolio-website?retryWrites=true&w=majority
NODE_ENV=production

# JWT Configuration  
JWT_SECRET=your-super-secure-64-character-jwt-secret-key-for-production-use
JWT_EXPIRES_IN=30d

# Server Configuration
PORT=3000
CORS_ORIGIN=https://your-portfolio-domain.vercel.app

# Email Configuration (Optional - for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800000

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM_CONTAINER_ID

# SEO Configuration
SITE_URL=https://your-portfolio-domain.vercel.app
DEFAULT_OG_IMAGE=https://your-portfolio-domain.vercel.app/og-image.jpg

# Admin Configuration
ADMIN_EMAIL=admin@yourportfolio.com
ADMIN_NAME=Your Name